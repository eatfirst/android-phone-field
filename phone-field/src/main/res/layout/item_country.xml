<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">

  <ImageView
      android:id="@+id/flag"
      android:layout_width="@dimen/flag_width"
      android:layout_height="@dimen/flag_height"
      android:layout_marginLeft="@dimen/padding_material"
      android:layout_marginStart="@dimen/padding_material"
      android:layout_centerVertical="true"
      />

  <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:textColor="@color/pf_grey"
      android:textSize="@dimen/text_size"
      android:layout_toRightOf="@id/flag"
      android:layout_toEndOf="@id/flag"
      android:layout_marginLeft="@dimen/padding_material"
      android:layout_marginStart="@dimen/padding_material"
      android:gravity="center_vertical"
      />

  <TextView
      android:id="@+id/dial_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/pf_grey_light"
      android:textSize="@dimen/text_size"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/padding_material"
      android:layout_marginEnd="@dimen/padding_material"
      android:layout_centerVertical="true"
      />

  <View android:layout_width="match_parent" android:layout_height="0.5dp"
    android:background="@color/pf_lines"
      android:layout_alignParentBottom="true"
      android:layout_alignLeft="@+id/name"
      android:layout_alignStart="@+id/name"
  />

</RelativeLayout>